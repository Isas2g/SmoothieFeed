<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.smoothiefeedapp.presentation.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:enterAnim="@anim/nav_default_enter_anim"/>
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popUpToInclusive="true"
            app:popUpTo="@id/loginFragment"/>

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.smoothiefeedapp.presentation.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration"/>

    <fragment
        android:id="@+id/userAccountsFragment"
        android:name="com.example.smoothiefeedapp.presentation.user_accounts_fragment.UserAccountsFragment"
        android:label="AuthorizationFragment"
        tools:layout="@layout/fragment_user_accounts">
        <action
            android:id="@+id/action_userAccountsFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
    </fragment>
    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.example.smoothiefeedapp.presentation.AuthorizationFragment"
        android:label="AuthorizationFragment"
        tools:layout="@layout/fragment_authorization"/>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.smoothiefeedapp.presentation.main_fragment.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_userAccountsFragment"
            app:destination="@id/userAccountsFragment" />
    </fragment>


</navigation>