<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_fragment_til_username"
        style="@style/RegistrationFragmentTIL"
        android:hint="@string/registration_hint_username"
        app:layout_constraintBottom_toTopOf="@id/registration_fragment_til_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_fragment_et_username"
            style="@style/RegistrationFragmentEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_fragment_til_email"
        style="@style/RegistrationFragmentTIL"
        android:hint="@string/registration_hint_email"
        app:layout_constraintBottom_toTopOf="@id/registration_fragment_til_first_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_fragment_til_username"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_fragment_et_email"
            style="@style/RegistrationFragmentEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_fragment_til_first_password"
        style="@style/RegistrationFragmentTIL"
        android:hint="@string/registration_hint_password"
        app:layout_constraintBottom_toTopOf="@id/registration_fragment_til_second_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_fragment_til_email"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_fragment_et_first_password"
            style="@style/RegistrationFragmentEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registration_fragment_til_second_password"
        style="@style/RegistrationFragmentTIL"
        android:hint="@string/registration_hint_repeat_your_password"
        app:layout_constraintBottom_toTopOf="@id/registration_fragment_bv_join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_fragment_til_first_password"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registration_fragment_et_second_password"
            style="@style/RegistrationFragmentEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/registration_fragment_bv_join"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/registration_bv_text_join"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_fragment_til_second_password"
        app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>