<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_fragment_text_field_email"
        style="@style/RegistrationFragmentTIL"
        android:layout_margin="@dimen/default_margin"
        android:hint="@string/email_hint_text_input_layout"
        app:layout_constraintBottom_toTopOf="@id/login_fragment_text_field_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_fragment_et_email"
            style="@style/RegistrationFragmentEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_fragment_text_field_password"
        style="@style/RegistrationFragmentTIL"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:hint="@string/password_hint_text_input_layout"
        app:layout_constraintBottom_toTopOf="@id/login_fragment_tv_forgot_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_fragment_text_field_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_fragment_et_password"
            style="@style/RegistrationFragmentEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/login_fragment_tv_forgot_password"
        style="@style/LoginFragmentTextView"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="@string/login_fragment_text_forgot_your_password"
        app:layout_constraintBottom_toTopOf="@id/login_fragment_bv_log_in"
        app:layout_constraintEnd_toEndOf="@id/login_fragment_text_field_password"
        app:layout_constraintTop_toBottomOf="@id/login_fragment_text_field_password" />

    <Button
        android:id="@+id/login_fragment_bv_log_in"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/button_text_log_in"
        app:layout_constraintBottom_toTopOf="@id/login_fragment_tv_dont_have_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_fragment_tv_forgot_password" />

    <TextView
        android:id="@+id/login_fragment_tv_dont_have_account"
        style="@style/LoginFragmentTextView"
        android:text="@string/login_fragment_text_don_t_you_have_an_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_fragment_bv_log_in" />

</androidx.constraintlayout.widget.ConstraintLayout>